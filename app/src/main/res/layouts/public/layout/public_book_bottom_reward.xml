<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/book_bottom_reward_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_bottom_reward_top_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/dialog_Reward"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/book_bottom_reward_bottom_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:textSize="10dp"/>
        </LinearLayout>

        <View
            android:id="@+id/book_bottom_first_line"
            android:layout_width="0.5dp"
            android:layout_height="22dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/book_bottom_monthly_pass_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_bottom_monthly_pass_top_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/dialog_Monthly_pass"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/book_bottom_monthly_pass_bottom_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:textSize="10dp"/>
        </LinearLayout>

        <View
            android:id="@+id/book_bottom_second_line"
            android:layout_width="0.5dp"
            android:layout_height="22dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/book_bottom_comment_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_bottom_comment_top_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/CommentListActivity_title"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/book_bottom_comment_bottom_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>