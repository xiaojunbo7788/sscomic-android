<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mine_login_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_head"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mine_login_registe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/MineNewFragment_user_login"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    tools:ignore="RtlHardcoded,SpUsage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_login"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/mine_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/gray_b0" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/mine_vip_icon"
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_novip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_mine_head_money"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:id="@+id/mine_money_coins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_shubi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="- -"
                android:textColor="@color/maincolor"
                android:textSize="@dimen/mine_text_16dp" />

            <TextView
                android:id="@+id/mine_shubi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/gray_b0"
                android:textSize="@dimen/mine_text_14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_ticket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_shuquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="- -"
                android:textColor="@color/maincolor"
                android:textSize="@dimen/mine_text_16dp"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/mine_shuquan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/gray_b0"
                android:textSize="@dimen/mine_text_14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_welfare_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_fuli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="- -"
                android:textColor="@color/maincolor"
                android:textSize="@dimen/mine_text_16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/dialog_Monthly_pass"
                android:textColor="@color/gray_b0"
                android:textSize="@dimen/mine_text_14dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/graybg"/>
</LinearLayout>
