<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_fragment_Book_store_layout"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal"
    android:layout_gravity="right">

    <RelativeLayout
        android:id="@+id/fragment_store_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="23dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="26dp"
            android:id="@+id/fragment_store_search_Bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="26dp"
            android:layout_centerVertical="true"
            android:id="@+id/fragment_store_search_Bookname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone" />

        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="26dp"
            android:layout_centerVertical="true"
            android:id="@+id/fragment_store_search_Bookname3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/fragment_store_search_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/main_search_white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_store_manorwoman"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_width="40dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fragment_store_sex"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/comic_mall_boy_dark" />
    </RelativeLayout>
</LinearLayout>
