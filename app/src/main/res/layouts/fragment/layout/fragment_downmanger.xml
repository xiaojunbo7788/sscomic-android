<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/mActivityDownmangerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/grayline"
        android:dividerHeight="0dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/mFragmentBookshelfNoresult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/no_data"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="@string/app_down_noBooks"
            android:textColor="@color/gray_b0"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/public_recycleview_buttom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/public_recycleview_buttom_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_allchoose"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grayline" />

            <TextView
                android:id="@+id/public_recycleview_buttom_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_delete"
                android:textColor="@color/gray_9"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
