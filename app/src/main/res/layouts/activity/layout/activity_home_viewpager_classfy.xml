<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_home_viewpager_classfy_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:text="@string/splashactivity_skip"
            android:textColor="@color/gray_b0"
            android:textSize="15dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="@string/firstStartactivity_zongyounixihuan"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/firstStartactivity_chooseclassfy"
        android:textColor="@color/gray_b0"
        android:textSize="22dp" />


    <GridView
        android:id="@+id/activity_home_viewpager_classfy_GridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="30dp"
        android:listSelector="@android:color/transparent"
       >


    </GridView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

    <Button
        android:id="@+id/activity_home_viewpager_classfy_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/app_confirm"
        android:textColor="@color/white" />
</LinearLayout>