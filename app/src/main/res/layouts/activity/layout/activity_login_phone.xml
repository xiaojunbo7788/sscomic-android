<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="30dp">

    <LinearLayout
        android:id="@+id/activity_login_phone_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <EditText
                android:id="@+id/activity_login_phone_username"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@null"
                android:hint="@string/UserInfoActivity_phone"
                android:inputType="phone"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/login_input_tip"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/activity_login_phone_clear"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:tint="@color/gray_b0"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/login_close"
                android:visibility="gone" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grayline"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <EditText
                    android:id="@+id/activity_login_phone_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/LoginActivity_code"
                    android:inputType="number"
                    android:textColorHint="@color/login_input_tip"
                    android:textSize="13dp" />

                <View
                    android:layout_toLeftOf="@+id/activity_bind_phone_get_message_btn"
                    android:background="@color/grayline"
                    android:layout_width="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="14dp" />

                <TextView
                    android:id="@+id/activity_bind_phone_get_message_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="@string/LoginActivity_getcode"
                    android:textColor="@color/login_input_tip"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/grayline" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/activity_login_phone_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/activity_login_phone_container"
        android:layout_marginTop="45dp"
        android:text="@string/LoginActivity_denglu"
        android:textColor="@color/gray_b0"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="gone"
        android:padding="10dp"
        android:text="账号密码登录"
        android:textColor="@color/skyblue"
        android:textSize="11dp" />
</RelativeLayout>
