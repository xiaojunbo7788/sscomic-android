<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity_lookbigimage_RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:background="#BA000000"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:paddingRight="15dp"
            android:paddingBottom="40dp"
            android:layout_gravity="bottom"
            >
            <TextView
                android:id="@+id/activity_lookbigimage_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/white"
                android:textSize="14dp" />
            <TextView
                android:textColor="@color/white"
                android:visibility="gone"
                android:id="@+id/activity_lookbigimage_active_today"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/activity_lookbigimage_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/activity_lookbigimage_ViewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_lookbigimage_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/maincolor"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity_lookbigimage_title2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_lookbigimage_back"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp">

                <ImageView

                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:src="@mipmap/back_black"
                    android:tint="@color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>