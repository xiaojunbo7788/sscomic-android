<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Book_info_titlebar_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:id="@+id/titlebar_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/back_white"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:id="@+id/titlebar_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:maxWidth="200dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/fileSearcherBlack"
            android:gravity="center"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/book_info_titleBar_layout"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/titlebar_download"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/titlebar_download_img"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/icon_down_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/titlebar_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/titlebar_share_img"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/share_white" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
