<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/start_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/s_start"/>

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/start_view_1"
            android:layout_centerVertical="true"
            android:id="@+id/start_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/s_start"/>

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/start_view_2"
            android:id="@+id/start_view_3"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/s_start"/>

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/start_view_3"
            android:layout_centerVertical="true"
            android:id="@+id/start_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/s_start"/>

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/start_view_4"
            android:layout_centerVertical="true"
            android:id="@+id/start_view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/s_start"/>


    </RelativeLayout>


</LinearLayout>