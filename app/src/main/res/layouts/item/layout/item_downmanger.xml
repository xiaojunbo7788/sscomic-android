<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_dowmmanger_LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/item_bianji_checkBox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/shlefselect"
            android:button="@null"
            android:clickable="false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_dowmmanger_cover"
            android:layout_width="80dp"
            android:layout_height="107dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/item_dowmmanger_open_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_dowmmanger_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_dowmmanger_open"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/BookInfoActivity_down_open"
                android:textColor="@color/maincolor"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/item_dowmmanger_Downoption_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/item_dowmmanger_Downoption_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_dowmmanger_Downoption_title"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="@color/gray_b0"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/item_dowmmanger_Downoption_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_dowmmanger_Downoption_title"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/item_dowmmanger_Downoption_date"
                android:gravity="center"
                android:textColor="@color/gray_b0"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/item_dowmmanger_Downoption_yixizai"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/BookInfoActivity_down_yixiazai"
                android:textColor="@color/gray_b0"
                android:textSize="12dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>