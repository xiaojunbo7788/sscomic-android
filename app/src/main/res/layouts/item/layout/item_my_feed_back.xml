<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/view_10"/>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_feed_back_time"
            android:textColor="@color/gray_b0"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="@color/black1"
            android:text="@string/activityproblem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="14dp"
            android:textColor="@color/black1"
            android:id="@+id/activity_feed_back_content"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.ssreader.novel.ui.view.GridViewForScrollView
            android:layout_marginTop="10dp"
            android:numColumns="6"
            android:visibility="gone"
            android:id="@+id/activity_my_feed_back_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/activity_my_feed_back_re_view"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="0.3dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            layout="@layout/view_03"/>

        <TextView
            android:id="@+id/item_huifu"
            android:layout_marginTop="10dp"
            android:text="@string/activityReply"
            android:textSize="15dp"
            android:textColor="@color/gray_b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="13dp"
            android:textColor="@color/gray_b0"
            android:id="@+id/activity_feed_back_reply"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
