<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/shelffragment_banner"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.lihang.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/lightgray3"
            app:hl_cornerRadius="0dp"
            app:hl_leftShow="true"
            app:hl_shadowColor="#2a000000"
            app:hl_shadowLimit="1dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/item_BookShelfBannerHolderView_img"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/item_BookShelfBannerHolderView_audio_img"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/audio_mark"
                    android:visibility="gone"/>
            </FrameLayout>
        </com.lihang.ShadowLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_BookShelfBannerHolderView_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_BookShelfBannerHolderView_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:enabled="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/gray_b0"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>