<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_banner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ssreader.novel.ui.view.banner.view.CBLoopViewPager
            android:id="@+id/cbLoopViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/item_store_entrance_comic_layout"
            layout="@layout/item_store_entrance_comic"
            android:visibility="gone" />

        <include
            android:id="@+id/item_shelf_banner_layout"
            layout="@layout/item_bookshelfbannerholderview"
            android:visibility="gone" />

        <!-- 翻页指示点的viewgroup -->
        <LinearLayout
            android:id="@+id/loPageTurningPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal" />
    </RelativeLayout>
</LinearLayout>