<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_mine_user_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/user_info_avatar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/user_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/black_7"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_info_avatar"
                android:layout_gravity="center_vertical"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/user_info_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray_b0"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/user_info_into_image"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/right_black" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/user_info_line"
        android:background="@color/grayline"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_height="0.3dp"/>

    <View
        android:id="@+id/user_info_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/graybg" />
</LinearLayout>
