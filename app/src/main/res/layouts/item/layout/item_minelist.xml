<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mine_top_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_mine_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/item_mine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:maxWidth="200dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_mine_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textColor="@color/gray_b0"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/item_mine_into_image"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/right_black"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <View
        android:id="@+id/item_mine_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/grayline" />

    <View
        android:id="@+id/item_mine_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/graybg" />
</LinearLayout>