<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audio_progress_bg"
    android:layout_width="130dp"
    android:layout_height="45dp"
    android:gravity="center"
    android:background="@color/alpha_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/audio_progress_progressBar_layout"
            android:layout_width="42dp"
            android:layout_height="42dp">

            <ImageView
                android:id="@+id/audio_progress_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"/>

            <com.ssreader.novel.ui.audio.view.CircularProgressBar
                android:id="@+id/audio_progress_progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/audio_progress_status"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:tint="@color/gray_b0"
            android:src="@mipmap/audio_layout_player"/>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/audio_progress_close_layout"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:tint="@color/gray_b0"
                android:layout_centerInParent="true"
                android:src="@mipmap/audio_close"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>