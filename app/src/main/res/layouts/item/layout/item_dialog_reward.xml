<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/item_reward_gift_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:id="@+id/item_reward_gift_img"
            android:layout_gravity="center_horizontal"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <TextView
            android:maxLength="5"
            android:ellipsize="end"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black_3"
            android:id="@+id/item_reward_gift_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"/>

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/item_reward_gift_price"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:textColor="@color/gray_9"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:visibility="gone"
        android:id="@+id/item_dialog_reward_flag"
        android:gravity="center"
        android:paddingLeft="5.5dp"
        android:paddingRight="7dp"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:layout_gravity="right"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>