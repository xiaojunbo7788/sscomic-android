<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_audio_catalog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_audio_catalog_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_audio_catalog_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black_3"
                android:textSize="14dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
<!--                <LinearLayout-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:layout_marginRight="23dp"-->
<!--                    android:orientation="horizontal">-->
<!--                    -->
<!--                    <ImageView-->
<!--                        android:layout_width="8.5dp"-->
<!--                        android:layout_height="8.5dp"-->
<!--                        android:src="@mipmap/icon_player_time"/>-->

<!--                    <TextView-->
<!--                        android:id="@+id/item_audio_catalog_player_time"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:singleLine="true"-->
<!--                        android:ellipsize="end"-->
<!--                        android:layout_marginLeft="5dp"-->
<!--                        android:textSize="11dp"-->
<!--                        android:textColor="@color/gray_b0"/>-->
<!--                </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/item_audio_catalog_player_num_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="23dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="6.5dp"
                        android:layout_height="7.5dp"
                        android:src="@mipmap/icon_player_num"/>

                    <TextView
                        android:id="@+id/item_audio_catalog_player_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:textSize="11dp"
                        android:textColor="@color/gray_b0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="11dp"
                        android:src="@mipmap/icon_update_time"/>

                    <TextView
                        android:id="@+id/item_audio_catalog_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:textSize="11dp"
                        android:textColor="@color/gray_b0"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/item_audio_catalog_down_layout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/item_audio_catalog_down"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_down_gray"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/item_audio_catalog_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/grayline"/>
</LinearLayout>