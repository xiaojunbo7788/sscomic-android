<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:clickable="false"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/item_squre_show_list_layout"
        android:layout_width="wrap_content"
        android:clickable="false"
        android:layout_height="wrap_content">

        <ImageView
            android:clickable="false"
            android:layout_centerInParent="true"
            android:id="@+id/item_squre_show_list_imgs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:clickable="false"
            android:id="@+id/item_squre_show_list_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/item_squre_show_list_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:src="@mipmap/icon_addbook" />

        <RelativeLayout
            android:id="@+id/item_squre_show_list_delete"
            android:layout_gravity="right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone"
            android:background="@drawable/shape_mine_user_avatar">

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ucrop_ic_cross"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>