<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_acquire_pay_choose_bg"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >
        <LinearLayout
            android:id="@+id/item_recharge_title_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:id="@+id/item_acquire_pay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:textSize="10dp"
                android:id="@+id/item_acquire_pay_title_tag"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <TextView
            android:textColor="@color/gray_b0"
            android:layout_marginTop="5dp"
            android:id="@+id/item_acquire_pay_note"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/item_recharge_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/item_acquire_pay_price"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    </RelativeLayout>
</FrameLayout>