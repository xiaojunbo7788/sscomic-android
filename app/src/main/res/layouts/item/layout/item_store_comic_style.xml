<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/liem_store_comic_style1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/liem_store_comic_style1_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_comic_def" />


            <TextView
                android:id="@+id/liem_store_comic_style1_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="#1Af7f8f9"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/liem_store_comic_style1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/mine_text_12dp" />

        <TextView
            android:id="@+id/liem_store_comic_style1_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/gray_b0"
            android:textSize="11dp" />
    </LinearLayout>
</RelativeLayout>
